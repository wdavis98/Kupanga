@using Kupanga.Models.Repository
<div class="container-fluid">
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title text-center">Status</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-xs-4">
                            <p><b>Type</b></p>
                        </div>
                        <div class="col-xs-4">
                            <p><b>Name</b></p>
                        </div>
                        <div class="col-xs-4">
                            <p><b>Cost</b></p>
                        </div>
                    </div>
                    @if (((SubmittedQuote)Session["CurrentQuote"]).Component != null)
                    {
                        <div class="row">
                            <div class="col-xs-4">
                                <p>Door</p>
                            </div>
                            <div class="col-xs-4">
                                <p>@(((SubmittedQuote)Session["CurrentQuote"]).Component.ComponentName)</p>
                            </div>
                            <div class="col-xs-4">
                                <p>$@(((SubmittedQuote)Session["CurrentQuote"]).Component.ComponentPrice) per door</p>
                            </div>
                        </div>
                    }
                    @if (((SubmittedQuote)Session["CurrentQuote"]).Component1 != null)
                    {
                        <div class="row">
                            <div class="col-xs-4">
                                <p>Window</p>
                            </div>
                            <div class="col-xs-4">
                                <p>@(((SubmittedQuote)Session["CurrentQuote"]).Component1.ComponentName)</p>
                            </div>
                            <div class="col-xs-4">
                                <p>$@(((SubmittedQuote)Session["CurrentQuote"]).Component1.ComponentPrice) per door</p>
                            </div>
                        </div>
                    }
                    @if (((SubmittedQuote)Session["CurrentQuote"]).Component3 != null)
                    {
                        <div class="row">
                            <div class="col-xs-4">
                                <p>Roof</p>
                            </div>
                            <div class="col-xs-4">
                                <p>@(((SubmittedQuote)Session["CurrentQuote"]).Component3.ComponentName)</p>
                            </div>
                            <div class="col-xs-4">
                                <p>$@(((SubmittedQuote)Session["CurrentQuote"]).Component3.ComponentPrice) per door</p>
                            </div>
                        </div>
                    }
                    @if (((SubmittedQuote)Session["CurrentQuote"]).Component2 != null)
                    {
                        <div class="row">
                            <div class="col-xs-4">
                                <p>Floor</p>
                            </div>
                            <div class="col-xs-4">
                                <p>@(((SubmittedQuote)Session["CurrentQuote"]).Component2.ComponentName)</p>
                            </div>
                            <div class="col-xs-4">
                                <p>$@(((SubmittedQuote)Session["CurrentQuote"]).Component2.ComponentPrice) per door</p>
                            </div>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>
