@{
	ViewBag.Title = "Home Page";
}
<!--<div class="container" style="background-color:white;">test-->
<style>
	.centered {
		position: absolute;
		top: 15%;
		left: 15%;
		transform: translate(-15%, -15%);
		font-size: 50px;
		color: white;
		background-color: rgba(233, 84, 32, 0.5);
	}

	.carousel-caption {
		max-width: 100%;
		width: 100%;
		background-color: #ffb81c;
		left: 0;
	}
</style>
<div id="carouselHouseTypes" class="carousel slide" data-ride="carousel">
	<!-- Indicators -->
	<ol class="carousel-indicators">
		<li style="color:black;" data-target="#carouselHouseTypes" data-slide-to="0" class="active"></li>
		<li style="color:black;" data-target="#carouselHouseTypes" data-slide-to="1"></li>
		<li style="color:black;" data-target="#carouselHouseTypes" data-slide-to="2"></li>
		<li style="color:black;" data-target="#carouselHouseTypes" data-slide-to="3"></li>
	</ol>

	<!-- Wrapper for slides -->
	<div class="carousel-inner">
		<div class="item active">
			<img style="width:100%;height:600px;" src="~/Content/Images/HomePage/Carousel/OneStory.jpg" alt="One Story Homes">
			<a href="@Url.Action("OneStory", "Home")">
				<div class="carousel-caption" style="background: rgba(169,169,169, 0.8);">
					<h3>One Story Homes</h3>
					<p>Click Anywhere</p>
				</div>
			</a>
		</div>
		<div class="item">
			<img style="width:100%;height:600px;" src="~/Content/Images/HomePage/Carousel/TwoStory.jpg" alt="Two Story Homes">
			<a href="@Url.Action("TwoStory", "Home")">
				<div class="carousel-caption" style="background-color:rgba(169,169,169, 0.8);">
					<h3>Two Story Homes</h3>
					<p>Click Anywhere</p>
				</div>
			</a>
		</div>
		<div class="item">
			<img style="width:100%;height:600px;" src="~/Content/Images/HomePage/Carousel/SingleFamily.jpg" alt="Single Family Homes">
			<a href="@Url.Action("SingleFamily", "Home")">
				<div class="carousel-caption" style="background-color:rgba(169,169,169, 0.8);">
					<h3>Single Family Homes</h3>
					<p>Click Anywhere</p>
				</div>
			</a>
		</div>
		<div class="item">
			<img style="width:100%;height:600px;" src="~/Content/Images/HomePage/Carousel/RanchStyle.jpg" alt="Ranch Style Homes">
			<a href="@Url.Action("RanchStyle", "Home")">
				<div class="carousel-caption" style="background-color:rgba(169,169,169, 0.8);">
					<h3>Ranch Style Homes</h3>
					<p>Click Anywhere</p>
				</div>
			</a>
		</div>

	</div>
	<p class="centered">WELCOME TO KUPANGA!<br />FIND YOUR HOME IN<br />3 EASY STEPS!</p>

	<!-- Left and right controls -->
	<a class="left carousel-control" href="#carouselHouseTypes" data-slide="prev">
		<span class="glyphicon glyphicon-chevron-left"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="right carousel-control" href="#carouselHouseTypes" data-slide="next">
		<span class="glyphicon glyphicon-chevron-right"></span>
		<span class="sr-only">Next</span>
	</a>
</div>

<div class="row">
	<div class="col-md-12">
		<h2 style="text-align:center;background-color:grey;color:white;">Your Home is Only 3 Steps Away!</h2>
	</div>
</div>
<div class="row">
	<div class="col-md-4 text-center">
		<h2>Choose</h2>
		<img src="~/Content/Images/HomePage/Choose.png" alt="Choose.jpg" class="img-circle" style="height:200px;width:200px">
		<p>Kupanga gives you the power to choose the type of house you want. Do you like one-story houses? What about single-family homes? We have it here!</p>
	</div>
	<div class="col-md-4 text-center">
		<h2>Customize</h2>
		<img src="~/Content/Images/HomePage/Customize.png" alt="Customize.jpg" class="img-circle" style="height:200px;width:200px">
		<p>Use Kupanga to make your house look how you want it to. With so many different materials to pick from, the possibilities are endless!</p>
	</div>
	<div class="col-md-4 text-center">
		<h2>Confirm</h2>
		<img src="~/Content/Images/HomePage/Confirm.png" alt="Create.jpg" class="img-circle" style="height:200px;width:200px">
		<p>After picking out what you desire, you will be given an estimate and Kupanga will handle the rest to make sure your experience is above satisfactory!</p>
	</div>
</div>
<div class="row text-center">
	<p><a class="btn btn-primary" href="@Url.Action("OneStory", "Home")">Start Here &raquo;</a></p>
</div>
