							<p><b>Material</b></p>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-4">
							<p>Door</p>
						</div>
						<div class="col-xs-4">
							<p>$100</p>
						</div>
						<div class="col-xs-4">
							<p>Oak</p>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-4">
							<p>Window</p>
						</div>
						<div class="col-xs-4">
							<p>$200</p>
						</div>
						<div class="col-xs-4">
							<p>Square</p>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-4">
							<p>Roof</p>
						</div>
						<div class="col-xs-4">
							<p>$3000</p>
						</div>
						<div class="col-xs-4">
							<p>Metal</p>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-4">
							<p>Floor</p>
						</div>
						<div class="col-xs-4">
							<p>$100</p>
						</div>
						<div class="col-xs-4">
							<p>Tile</p>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<img class="formatImg hidden-xs" src="~/Content/Images/B. Customize/step2.png" alt="One Story Homes">
		<img class="formatImg visible-xs" src="~/Content/Images/B. Customize/step2xs.png" alt="One Story Homes">
	</div>
</div>
<br />
<div class="row">
	<div class="col-md-12">
		<h2 class="pillHeader">Choose From One of The Categories Below!</h2>
	</div>
</div>
<div class="row">
	<div class="col-xs-12 text-center">
		<button type="button" class="btn btn-info pull-left hidden-xs statusClick" data-toggle="modal" data-target="#myModal">Status <span class="toggleBadge"></span></button>
		<ul class="nav nav-pills center-pills">
			<li>@Html.ActionLink("Doors", "Doors", "Home")</li>
			<li class="active">@Html.ActionLink("Windows", "Windows", "Home")</li>
			<li>@Html.ActionLink("Roof", "Roof", "Home")</li>
			<li>@Html.ActionLink("Flooring", "Flooring", "Home")</li>
		</ul>
		<a class="btn btn-primary pull-right hidden-xs" href="@Url.Action("Confirm", "Home")">Continue &raquo;</a>
	</div>
</div>
<div class="row visible-xs">
	<div class="col-xs-6 text-center">
		<button type="button" class="btn btn-info statusClick" data-toggle="modal" data-target="#myModal">Status <span class="toggleBadge"></span></button>
	</div>
	<div class="col-xs-6 text-center">
		<a class="btn btn-primary" href="@Url.Action("Confirm", "Home")">Continue &raquo;</a>
	</div>
</div>
@{
	// Count the number of ids in the file
	int fileCount = 9;
	// Set other variables
	int count = 0;
	var x = 0;
	var itemCount = 1;
	if ((fileCount % 4) == 0)
	{
		count = fileCount / 4;
	}
	else
	{
		count = (fileCount / 4) + 1;
	}
	while (x < count)
	{
		if (x == (count - 1))
		{
			if ((fileCount % 4) == 1)
			{
				itemCount = 2;
			}
			else if ((fileCount % 4) == 2)
			{
				itemCount = 3;
			}
			else if ((fileCount % 4) == 3)
			{
				itemCount = 4;
			}
			else
			{
				itemCount = 5;
			}
		}
		else
		{
			itemCount = 5;
		}
		<div class="row visible-lg">
			@{var a = 1;
				while (a < itemCount)
				{
					<div class="col-xs-3">
						<div class="card">
							<div class="descriptionHeaderColor">
								<h2 class="descriptionHeader">lgWindow @(a)</h2>
								<p class="descriptionHeader">Per Window<span class="pull-right">$100&nbsp;</span></p>
							</div>
							<label class="addPointer"><input class="imgClick" type="radio" name="imgSelectName" value="@(a)"><img id="imgSource@(a)" class="card-img-top formatImgLg" src="~/Content/Images/B. Customize/Windows/window@(a).jpg" alt="Card image cap" /></label>
							<div class="card-body text-center">
								<br />
								<label id="label@(a)" class="btn btn-primary resetLabel"><input class="buttonSelect" type="radio" name="buttonSelectName" value="@(a)"><span id="span@(a)" class="resetSpan">Select &raquo;</span></label>
							</div>
						</div>
					</div>
					a += 1;
				}
			}
		</div>
		<div class="row hidden-lg hidden-xs">
			@{var b = 1;
				while (b < itemCount)
				{
					<div class="col-xs-3">
						<div class="card">
							<div class="descriptionHeaderColor">
								<h2 class="descriptionHeader">hdWindow @(b)</h2>
								<p class="descriptionHeader">Per Window<span class="pull-right">$100&nbsp;</span></p>
							</div>
							<label class="addPointer"><input class="imgClick" type="radio" name="imgSelectName" value="@(b)"><img id="imgSource@(b)" class="card-img-top formatImg" src="~/Content/Images/B. Customize/Windows/window@(b).jpg" alt="Card image cap" /></label>
							<div class="card-body text-center">
								<br />
								<label id="label@(b)" class="btn btn-primary resetLabel"><input class="buttonSelect" type="radio" name="buttonSelectName" value="@(b)"><span id="span@(b)" class="resetSpan">Select &raquo;</span></label>
							</div>
						</div>
					</div>
					b += 1;
				}
			}
		</div>
		<div class="row visible-xs">
			@{
				var c = 1;
				while (c < itemCount)
				{
					<div class="col-xs-6 text-center">
						<div class="card">
							<div class="descriptionHeaderColor">
								<h2 class="descriptionHeader">xsWindow @(c)</h2>
								<p class="descriptionHeader">Per Window<span class="pull-right">$100&nbsp;</span></p>
							</div>
							<label class="addPointer"><input class="imgClick" type="radio" name="imgSelectName" value="@(c)"><img id="imgSource@(c)" class="card-img-top formatImgXs" src="~/Content/Images/B. Customize/Windows/window@(c).jpg" alt="Card image cap" /></label>
							<div class="card-body text-center">
								<br />
								<label id="label@(c)" class="btn btn-primary resetLabel"><input class="buttonSelect" type="radio" name="buttonSelectName" value="@(c)"><span id="span@(c)" class="resetSpan">Select &raquo;</span></label>
							</div>
						</div>
					</div>
					c += 1;
				}
			}
		</div>
		<div class="row visible-xs">
			@{
				while (c < itemCount)
				{
					<div class="col-xs-6 text-center">
						<div class="card">
							<div class="descriptionHeaderColor">
								<h2 class="descriptionHeader">xsWindow @(c)</h2>
								<p class="descriptionHeader">Per Window<span class="pull-right">$100&nbsp;</span></p>
							</div>
							<label class="addPointer"><input class="imgClick" type="radio" name="imgSelectName" value="@(c)"><img id="imgSource@(c)" class="card-img-top formatImgXs" src="~/Content/Images/B. Customize/Windows/window@(c).jpg" alt="Card image cap" /></label>
							<div class="card-body text-center">
								<br />
								<label id="label@(c)" class="btn btn-primary resetLabel"><input class="buttonSelect" type="radio" name="buttonSelectName" value="@(c)"><span id="span@(c)" class="resetSpan">Select &raquo;</span></label>
							</div>
						</div>
					</div>
					c += 1;
				}
			}
		</div>
		if (x == (count - 1))
		{
			if ((fileCount % 4) == 1)
			{
				<div class="col-xs-9"></div>
			}
			else if ((fileCount % 4) == 2)
			{
				<div class="col-xs-6"></div>
			}
			else if ((fileCount % 4) == 3)
			{
				<div class="col-xs-3"></div>
			}
		}
		x += 1;
	}
}
<script src="/Scripts/jquery-1.10.2.js"></script>
<script src="/Scripts/respond.js"></script>
<script>
	$('.buttonSelect').on('click', function () {
		var vbuttonSelect = $('input[name=buttonSelectName]:checked').val();
		// Toggle the badge on the status to let the user know something changed
		$('.toggleBadge').addClass("badge");
		$('.toggleBadge').html("!")
		// Make all buttons the same
		$('.resetSpan').html("Select &raquo;")
		$('.resetLabel').removeClass("btn-default").addClass("btn-primary");
		// Change the selected button for large screens
		$('#span' + vbuttonSelect).html("Selected &raquo;");
		$('#label' + vbuttonSelect).removeClass("btn-primary").addClass("btn-default");
		// Change the selected button on small screens
		$('#xsSpan' + vbuttonSelect).html("Selected &raquo;");
		$('#xsLabel' + vbuttonSelect).removeClass("btn-primary").addClass("btn-default");
	});
	$(".imgClick").on("click", function () {
		var vImgId = $('input[name=imgSelectName]:checked').val();
		// Assign image to modal
		$('#imgPreview').attr('src', $('#imgSource' + vImgId).attr('src'));
		$('#imgPreviewXs').attr('src', $('#imgSourceXs' + vImgId).attr('src'));
		// open modal
		$('#imgModal').modal('show');
		// So it doesn't scroll to top of page
		return false;
	});
	$(".statusClick").on("click", function () {
		$('.toggleBadge').removeClass("badge");
		$('.toggleBadge').html("")
	});
</script>

